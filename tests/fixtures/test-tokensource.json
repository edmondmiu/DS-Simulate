{
  "core": {
    "color": {
      "primary": {
        "$type": "color",
        "$value": "#007bff",
        "$description": "Primary brand color"
      },
      "secondary": {
        "$type": "color",
        "$value": "#6c757d",
        "$description": "Secondary brand color"
      }
    },
    "spacing": {
      "base": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Base spacing unit"
      }
    }
  },
  "global": {
    "typography": {
      "body": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter",
          "fontSize": "16px",
          "lineHeight": "1.5"
        },
        "$description": "Base body typography"
      }
    },
    "colors": {
      "text": {
        "$type": "color",
        "$value": "{core.color.primary}",
        "$description": "Primary text color using reference"
      }
    }
  },
  "global-light": {
    "colors": {
      "background": {
        "$type": "color",
        "$value": "#ffffff",
        "$description": "Light theme background"
      }
    }
  },
  "components": {
    "button": {
      "padding": {
        "$type": "dimension",
        "$value": "{core.spacing.base}",
        "$description": "Button padding using spacing reference"
      },
      "background": {
        "$type": "color",
        "$value": "{core.color.primary}",
        "$description": "Button background color"
      }
    }
  }
}